{
  "version": "1.0.0",
  "packageId": "Cmf.Custom.IoT.Data.CoreSolution",
  "description": "Cmf Custom Template And Shared Solution Data Package",
  "packageType": "IoTData",
  "isInstallable": true,
  "isUniqueInstall": true,
  "isToSetDefaultSteps": true,
  "contentToPack": [
      {
        "source": "../../../Libs/LBOs/NetStandard/Cmf.LightBusinessObjects.dll",
        "target": "CMFInstallActions/References"
      },
      {
        "source": "MasterData/*",
        "target": "MasterData/$(version)/"
      }
  ],
  "xmlInjection": ["../../../DeploymentMetadata/ui.xml"]
  ,
  "steps": [
    { "order": "1", "type": "Generic", "onExecute": "$(Agent.Root)/agent/scripts/stop_host.ps1" },
    { "order": "2", "type": "TransformFile", "file": "Cmf.Foundation.Services.HostService.dll.config", "tagFile": true },
    { "order": "3", "type": "Generic", "onExecute": "$(Agent.Root)/agent/scripts/start_host.ps1" },
    { "order": "4", "type": "Generic", "onExecute": "$(Package[Cmf.Custom.Package].TargetDirectory)/GenerateLBOs.ps1" }
  ]
}
