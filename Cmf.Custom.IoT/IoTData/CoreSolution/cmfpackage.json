{
    "packageId": "Cmf.Custom.IoT.Package.CoreSolution",
    "version": "1.0.0",
    "description": "This package deploys Critical Manufacturing MES Template Workflows and Shared Workflows, as well as the basic SecsGEM configuration.",
    "packageType": "IoTData",
	"isInstallable": true,
	"isUniqueInstall": true,
	"isToSetDefaultSteps": true,
	"contentToPack": [],
    "dependencies": [
        {
          "id": "Cmf.Custom.IoT.Packages",
          "version": "1.0.0"
        },
        {
            "id": "Cmf.Custom.IoT.Data.CoreSolution",
            "version": "1.0.0"
        }
    ],
    "testPackages": [
    ],
	"steps": [
		{ "order": "1", "type": "Generic", "onExecute": "$(Agent.Root)/agent/scripts/stop_host.ps1" },
		{ "order": "2", "type": "TransformFile", "file": "Cmf.Foundation.Services.HostService.dll.config", "tagFile": true },
		{ "order": "3", "type": "Generic", "onExecute": "$(Agent.Root)/agent/scripts/start_host.ps1" },
		{ "order": "4", "type": "Generic", "onExecute": "$(Package[Cmf.Custom.Package].TargetDirectory)/GenerateLBOs.ps1" }
	]
}