{
    "version": "2.0.0",
    "command": "tsc",
    "args": [
        "--target", "es5", "--module", "system", "--moduleResolution", "node", "--sourceMap", "--emitDecoratorMetadata", "--experimentalDecorators", "--removeComments", "--declaration", "--isolatedModules", "${file}"
    ],
    "problemMatcher": "$tsc",
    "tasks": [
        {
            "label": "tsc",
            "type": "shell",
            "command": "tsc",
            "args": [
                "--target",
                "es5",
                "--module",
                "system",
                "--moduleResolution",
                "node",
                "--sourceMap",
                "--emitDecoratorMetadata",
                "--experimentalDecorators",
                "--removeComments",
                "--declaration",
                "--isolatedModules",
                "${file}"
            ],
            "problemMatcher": "$tsc",
            "group": {
                "_id": "build",
                "isDefault": false
            }
        }
    ]
}